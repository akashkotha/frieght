{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "cd backend/FreightERP.API && dotnet restore && dotnet publish -c Release -o out"
    },
    "deploy": {
        "startCommand": "cd backend/FreightERP.API/out && dotnet FreightERP.API.dll",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}